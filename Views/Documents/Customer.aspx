						<div id="qualityIndicators" class="panel-collapse collapse">
							<div class="panel-body">
								<ol>
									<li>
										<a href="<%=Url.Content("~/Uploads/Показники-якості-електропостачання.pdf")%>" title="Показники якості електричної енергії"
